
generator client {
  provider = "prisma-client-js"
  output   = "../../prisma-client/generated/central"
}

datasource db {
  provider = "sqlite"
  url      = env("CENTRAL_DATABASE_URL")
}

// âœ… Copy all models from Postgres schema here
model SuperAdmin {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  contact   String?
  position  String
  country   String?
  state     String?
  city      String?
  zipCode   String?
  fullAddress   String?
  createdAt DateTime @default(now())

  currentSessionToken String?
  lastLoginAt   DateTime?
  
  role      Role   @default(MASTER_ADMIN)

  // ðŸ†• ADD THESE (MUST MATCH POSTGRES)
  basicComplete   Boolean @default(false)
  addressComplete Boolean @default(false)
}

model Tenant {
  id        String   @id @default(uuid())
  name      String
  contact   String
  fullAddress   String
  logo            String?
  certificateName String?
  stamp          String?
  sign           String?
  position  String
  country   String
  state      String
  city      String
  zipCode   String
  instituteName   String      @unique
  tenantId  String   @unique
  slug      String   @unique
  email     String?   @unique
  password  String?
  encryptedPassword  String
  dbUrl     String
  createdAt DateTime @default(now())
}

enum Role {
  MASTER_ADMIN
}