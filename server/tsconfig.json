{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node"]

  },
  "include": ["server.ts", "src/**/*.ts", "prisma-client/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
