{
  "name": "vcinmotions-application",
  "version": "1.0.8",
  "main": "installer/electron-main.js",
  "private": true,
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.vcinmotions.app",
    "productName": "VC Inmotions",
    "asar": true,
    "files": [
      "installer/**",
      "server/dist/**",
      "frontend/.next/standalone/**",
      "frontend/.next/static/**",
      "frontend/public/**",
      ".env"
    ],
    "extraResources": [
      {
        "from": "server/dist",
        "to": "server/dist"
      },
      {
        "from": "frontend/.next/standalone",
        "to": "frontend/standalone"
      },
      {
        "from": "server/node_modules",
        "to": "server/dist/node_modules"
      },
      {
        "from": "server/.env",
        "to": "server/dist/.env"
      },
      {
        "from": "server/assets",
        "to": "server/dist/assets"
      },
      {
        "from": "frontend/.next",
        "to": "frontend/standalone/frontend/.next"
      },
      {
        "from": "frontend/public",
        "to": "frontend/standalone/frontend/public"
      },
      {
        "from": "node-runtime/node.exe",
        "to": "node/node.exe"
      },
      {
      "from": "server/dist/prisma/central/dist/prisma/central/data/central.db",
      "to": "server/db/central_template.db"
    },
    {
      "from": "server/dist/prisma/institute/dist/prisma/institute/data/tenant.db",
      "to": "server/db/tenant_template.db"
    } 
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "sign": false
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "express": "^5.2.1"
  }
}
